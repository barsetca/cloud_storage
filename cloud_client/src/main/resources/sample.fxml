<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="Controller">
<!--    <AnchorPane prefHeight="501.0" prefWidth="490.0">-->

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <Label maxWidth="Infinity" text="My local folder" HBox.hgrow="ALWAYS" />
        <Label maxWidth="Infinity" text="Cloud folder" HBox.hgrow="ALWAYS" />
        <padding>
            <Insets bottom="5.0" left="10.0" right="5.0" top="10.0" />
        </padding>
    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <ListView fx:id="lv" prefHeight="439.0" prefWidth="459.0" HBox.hgrow="ALWAYS" />
        <ListView fx:id="serv" prefHeight="439.0" prefWidth="459.0" HBox.hgrow="ALWAYS" />
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </HBox>

    <HBox spacing="5">
        <TextField fx:id="txt" prefHeight="31.0" prefWidth="383.0" HBox.hgrow="ALWAYS"/>
        <Button fx:id="send" onAction="#sendCommand" layoutX="410.0" layoutY="461.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="63.0"
                text="Send"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </HBox>

        <HBox spacing="5">
            <Button fx:id="upload" onAction="#uploadCommand" maxWidth="Infinity" text="Upload to cloud" HBox.hgrow="ALWAYS" />
            <Button fx:id="del" onAction="#delCommand" maxWidth="Infinity" text="Delete selected file" HBox.hgrow="ALWAYS" />
            <Button fx:id="download" onAction="#downloadCommand" maxWidth="Infinity" text="Download from cloud" HBox.hgrow="ALWAYS" />
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
<!--    </AnchorPane>-->
</VBox>
